package ch02;

//삼항연산자(p79)?:
/*조건식의 연산결과가 true면 '식1'의 결과를 반환하고
 				false면 '식2'의 결과를반환한
 * 문법 > (조건)? 참일경우:거짓일경우
 * 사용> 변수=(조건)?참일경우:거짓일경우
 * if (조건){
   //조건만족시 실행코드
}else{
 //조건만족X시 실행코드
}
 */

public class Ex07_p79 {

	public static void main(String[] args) {
		//나이가 20이면 성인 출력,그렇지 않다면 미성년자로 출력
		//나이를 저장하기 위한 변수
		int age;
		age=15; 
		
		System.out.println("---------------삼항 연산자 이용");
		//(age>=20)?System.out.println("성인");:System.out.println("미성년자");
		String result2=(age>=20)?"성인":"미성년자";
		System.out.println(result2);
		
		
		
		
		System.out.println("---------------if문 이용");
		String result2 = "";
		if (age>=20){
			result2="성인";
		//조건만족시 실행코드
		}else{
			result2="미성년자";
		//조건만족X시 실행코드
		}
		System.out.println(result2);
	}

}
